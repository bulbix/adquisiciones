<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <!--Build: with lujan99@usa.net Nhibernate template-->
  <class name="Adquisiciones.Data.Entities.PedidoDetalleHis,Adquisiciones.Data" table="pedido_detalle_his" lazy="true">
    <composite-id name="Id" class="Adquisiciones.Data.Entities.PedidoDetalleHisId,Adquisiciones.Data">
      <key-many-to-one name="PedidoHist" class="Adquisiciones.Data.Entities.PedidoHist,Adquisiciones.Data">
        <column name="id_pedido" />
        <column name="mod_ped_hist" />
      </key-many-to-one>
      <key-property name="RenglonPedido" column="renglon_pedido" type="int" />
    </composite-id>
    <many-to-one name="Articulo">
      <column name="cve_art"  />
      <column name="id_almacen"  />
    </many-to-one>
    <property name="Marca" column="marca" type="string" />
    <property name="Cantidad" column="cantidad" type="Decimal" />
    <property name="PrecioUnitario" column="precio_unitario" type="Decimal" />
    <bag name="PedidoEntregaHis" inverse="true" lazy="true" cascade="delete">
      <key>
        <column name="id_pedido" />
        <column name="renglon_pedido" />
        <column name="mod_ped_hist" />
      </key>
      <one-to-many class="Adquisiciones.Data.Entities.PedidoEntregaHis,Adquisiciones.Data" />
    </bag>
  </class>
</hibernate-mapping>